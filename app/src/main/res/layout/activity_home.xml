<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/fondo"
  >

    <View
        android:id="@+id/view"
        android:layout_width="349dp"
        android:layout_height="356dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/rdborder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/BienvenidaNombreApellido"
        android:layout_width="372dp"
        android:layout_height="67dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/rdborderbutton"
        android:gravity="center"
        android:text="Bienvenido @Usuario"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"
        android:textColor="@color/black" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="232dp"
        android:layout_height="91dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/BienvenidaNombreApellido"
        app:layout_constraintEnd_toEndOf="@+id/BienvenidaNombreApellido"
        app:layout_constraintStart_toStartOf="@+id/BienvenidaNombreApellido"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="237dp"
        android:layout_height="30dp"
        android:background="@drawable/rdborderbutton"
        android:gravity="center"
        android:text="Seleccione una opcion"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnCancelarReserva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />

    <Button
        android:id="@+id/btnAgendarSala"
        android:layout_width="264dp"
        android:layout_height="57dp"
        android:layout_marginBottom="220dp"
        android:textSize="25sp"
        android:text="Agendar sala"
        android:textColor="@color/white"
        android:backgroundTint="@color/verdeOscuro"
        android:text="Cancelar reserva"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCancelarReserva"
        android:layout_width="264dp"
        android:layout_height="57dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/verdeOscuro"
        android:text="Agendar sala"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAgendarSala"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBuscarAula"
        android:layout_width="264dp"
        android:layout_height="57dp"
        android:layout_marginBottom="136dp"
        android:textSize="25sp"
        android:text="Buscar aula"
        android:textColor="@color/white"
        android:backgroundTint="@color/verdeOscuro"
        android:text="Buscar aula"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAgendarSala"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imgConfiguration"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="imgConfiguraciÃ³n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/conf"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>