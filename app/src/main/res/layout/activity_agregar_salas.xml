<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarSalasActivity">


    <include
        android:id="@+id/include3"
        layout="@layout/interfaz_principal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-64dp" />

    <TextView
        android:id="@+id/btnMantinimiento"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/rdborderbutton"
        android:clickable="true"
        android:gravity="center"
        android:text="Mantenimiento sala"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/include3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btnEliminar"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/rdborderbutton"
        android:clickable="true"
        android:gravity="center"
        android:text="Eliminar Sala"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnMantinimiento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btnAgregar"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:background="@drawable/rdborderbutton"
        android:clickable="true"
        android:gravity="center"
        android:text="Agregar Sala"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnEliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include3"
        app:layout_constraintVertical_bias="0.918" />


</androidx.constraintlayout.widget.ConstraintLayout>