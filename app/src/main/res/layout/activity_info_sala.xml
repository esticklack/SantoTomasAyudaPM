<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoSala">

    <include
        android:id="@+id/include2"
        layout="@layout/interfaz_principal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-64dp" />

    <TextView
        android:id="@+id/txtCapacidad102"
        android:layout_width="325dp"
        android:layout_height="33dp"
        android:layout_marginBottom="492dp"
        android:gravity="center"
        android:text="Capacidad: 10 Estudiantes"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/include2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtUbicacionSala102"
        android:layout_width="326dp"
        android:layout_height="59dp"
        android:layout_marginBottom="424dp"
        android:gravity="center"
        android:text="Ubicación: A un costado de la sala 101, frente a la biblioteca."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/include2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCapacidad102"
        app:layout_constraintVertical_bias="0.973"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/lblDispA"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="Disponibilidad: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRealizarReserva102"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUbicacionSala102"
        app:layout_constraintVertical_bias="0.975"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtInfoSala102"
        android:layout_width="325dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="INFORMACIÓN SALA 102"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtCapacidad102"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include2"
        app:layout_constraintVertical_bias="0.977"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnVerImgSala102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verdeOscuro"
        android:text="Ver imagen"
        app:layout_constraintBottom_toTopOf="@+id/lblDispA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUbicacionSala102"
        app:layout_constraintVertical_bias="0.048"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnRealizarReserva102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/verdeOscuro"
        android:text="Realizar Reserva"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/SpnHorarios102"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:background="@drawable/rdborderbutton"
        app:layout_constraintBottom_toTopOf="@+id/lblDispA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVerImgSala102"
        app:layout_constraintVertical_bias="0.939"

        />

</androidx.constraintlayout.widget.ConstraintLayout>